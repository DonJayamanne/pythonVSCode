{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "esModuleInterop": true,
        "incremental": true,
        "moduleResolution": "node",
        "noEmitOnError": true,
        "preserveWatchOutput": true,
        "resolveJsonModule": true,
        "types": [],
        "module": "esnext",
        "target": "es2017",
        "rootDir": "src",
        "lib": ["es6", "es2018", "dom"],
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./out",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": ["node_modules"]
}
